{
  "name": "miaoji-server",
  "version": "0.1.0",
  "private": true,
  "description": "MiaoJi backend (NestJS + Prisma + MySQL)",
  "scripts": {
    "dev": "nest start --watch",
    "dev:clean": "powershell -ExecutionPolicy Bypass -File scripts/dev-kill-node.ps1",
    "dev:win": "powershell -ExecutionPolicy Bypass -File scripts/dev-start.ps1",
    "build": "nest build",
    "start": "node dist/src/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "smoke": "node scripts/smoke.js",
    "backfill:displayNo": "ts-node scripts/backfill-display-no.ts"
  },
  "dependencies": {
    "@alicloud/dypnsapi20170525": "^2.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.22.0",
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.0.0",
    "ioredis": "^5.9.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "wechatpay-node-v3": "^2.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.30",
    "@types/passport-jwt": "^3.0.8",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
