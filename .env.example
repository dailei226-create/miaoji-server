# Server
PORT=3100
NODE_ENV=development

# Database (MySQL)
DATABASE_URL="mysql://miaoji:miaoji_password@localhost:3306/miaoji"

# JWT
JWT_SECRET="change-me-to-a-long-random-string"
JWT_EXPIRES_IN="7d"

# CORS
CORS_ORIGIN="http://localhost:5173"

# 活动配置（静态，GET /config 只读；重启生效）
# Banner 活动
# ACTIVITY_BANNER_ENABLED=true
# ACTIVITY_BANNER_IMAGE=https://...
# ACTIVITY_BANNER_LINK_TYPE=webview|mini|none
# ACTIVITY_BANNER_LINK=https://...
# ACTIVITY_BANNER_APPID=xxxxx
# ACTIVITY_BANNER_PATH=/pages/...
# ACTIVITY_BANNER_VERSION=1
# 常驻折扣活动
# ACTIVITY_DISCOUNT_ENABLED=true
# ACTIVITY_DISCOUNT_MIN=70
# ACTIVITY_DISCOUNT_MAX=95
# ACTIVITY_DISCOUNT_VERSION=1
# ACTIVITY_DURATION_DAYS=7
# 活动品类树（JSON 数组，与集市品类分离）
# ACTIVITY_CATEGORIES_JSON=[{"id":"home","name":"家居装饰","children":[{"id":"all","name":"全部"},{"id":"clay","name":"坯瓷"}]},{"id":"jewelry","name":"首饰","children":[{"id":"all","name":"全部"}]}]
